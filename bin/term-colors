#!/usr/bin/env bash

if [ "$1" = "--introduce" ]; then
    echo "$0 는 Terminal Color를 테스트로 출력해보는 스크립트입니다. Vim에서 색상을 설정할 때 유용하게 사용할 수 있습니다."
    exit 0
fi

if [ "$1" = "--vim" ]; then
    for((i=16; i<256; i++)); do
        printf "\e[48;5;${i}m%03d" $i;
        printf '\e[0m';
        [ ! $((($i - 15) % 6)) -eq 0 ] && printf ' ' || printf '\n'
    done
    exit 0
fi

if [ "$1" = "--bash" -o "$1" = "" ]; then
    COLOR_END='\e[0m'

    for((i=1; i<111; i++)); do
        # \e[0: NORMAL, \e[1: BOLD, \e[2: DIM, \e[3: ITALIC, \e[4: UNDERLINE, \e[7: REVERSE(반전)

        printf "\e[0;${i}m";    # 색칠용
        printf "%-9s" "\\e[0;${i}m";  # 화면표현용
        printf "$COLOR_END ";

        printf "\e[1;${i}m";
        printf "%-9s" "\\e[1;${i}m";
        printf "$COLOR_END"

        printf "\e[2;${i}m";
        printf "%-9s" "\\e[2;${i}m";
        printf "$COLOR_END"

        printf "\e[3;${i}m";
        printf "%-9s" "\\e[3;${i}m";
        printf "$COLOR_END"

        printf "\e[4;${i}m";
        printf "%-9s" "\\e[4;${i}m";
        printf "$COLOR_END"

        printf "\e[7;${i}m";
        printf "%-9s" "\\e[7;${i}m";
        printf "$COLOR_END"
        [ ! $(($i % 3)) -eq 0 ] && printf ', ' || printf '\n'
    done
fi

echo

