#!/usr/bin/env bash

if [ "$1" = "--introduce" ]; then
    echo "$0 는 Terminal Color를 테스트로 출력해보는 스크립트입니다. Vim에서 색상을 설정할 때 유용하게 사용할 수 있습니다."
    exit 0
fi

for((i=16; i<256; i++)); do
    printf "\e[48;5;${i}m%03d" $i;
    printf '\e[0m';
    [ ! $((($i - 15) % 6)) -eq 0 ] && printf ' ' || printf '\n'
done

for((i=30; i<112; i++)); do
    printf "\e[0;${i}m\]%03d" $i;
    printf '${i}' $i;
    [ ! $((($i - 15) % 6)) -eq 0 ] && printf ' ' || printf '\n'
done

